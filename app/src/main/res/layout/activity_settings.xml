<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    tools:layout_editor_absoluteY="81dp">


    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="101dp"
        android:layout_height="128dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginRight="93dp"
            tools:layout_editor_absoluteX="169dp"
            tools:layout_editor_absoluteY="23dp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="28dp"
            android:background="@null"
            android:hint="User's Name"
            tools:layout_editor_absoluteX="168dp"
            tools:layout_editor_absoluteY="42dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="105dp"
            android:text="Age"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="181dp" />

        <EditText
            android:id="@+id/age"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="User's Age"
            android:inputType="phone"
            tools:layout_editor_absoluteX="168dp"
            tools:layout_editor_absoluteY="175dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="90dp"
            android:text="Phone"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="206dp" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Phone Number"
            android:inputType="phone"
            tools:layout_editor_absoluteX="168dp"
            tools:layout_editor_absoluteY="199dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:layout_marginRight="84dp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="150dp" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="168dp"
            tools:layout_editor_absoluteY="143dp">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male" />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Race"
            android:layout_marginRight="98dp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="254dp" />

        <Spinner
            android:id="@+id/race"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:entries="@array/race_arrays"
            android:prompt="@string/race_prompt"
            tools:layout_editor_absoluteX="168dp"
            tools:layout_editor_absoluteY="251dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interest"
            android:layout_marginRight="82dp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="277dp" />

        <Spinner
            android:id="@+id/interest"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:entries="@array/interest_arrays"
            android:prompt="@string/interest_prompt"
            tools:layout_editor_absoluteX="168dp"
            tools:layout_editor_absoluteY="275dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Education Level"
            android:layout_marginRight="30dp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="230dp" />

        <Spinner
            android:id="@+id/education"
            android:layout_width="201dp"
            android:layout_height="28dp"
            android:entries="@array/education_arrays"
            android:prompt="@string/education_prompt"
            tools:layout_editor_absoluteX="168dp"
            tools:layout_editor_absoluteY="224dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horoscope"
            android:layout_marginRight="60dp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="302dp" />

        <Spinner
            android:id="@+id/horoscope"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:entries="@array/horoscope_arrays"
            android:prompt="@string/horoscope_prompt"
            tools:layout_editor_absoluteX="168dp"
            tools:layout_editor_absoluteY="299dp" />
    </LinearLayout>


    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="confirm"
        app:layout_constraintBottom_toTopOf="@+id/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Religion"
            android:layout_marginRight="82dp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="324dp" />

        <Spinner
            android:id="@+id/religion"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:entries="@array/religion_arrays"
            android:prompt="@string/religion_prompt"
            tools:layout_editor_absoluteX="168dp"
            tools:layout_editor_absoluteY="323dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="States"
            android:layout_marginRight="90dp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="349dp" />

        <Spinner
            android:id="@+id/states"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:entries="@array/states_arrays"
            android:prompt="@string/states_prompt"
            tools:layout_editor_absoluteX="168dp"
            tools:layout_editor_absoluteY="348dp" />

    </LinearLayout>





</android.support.constraint.ConstraintLayout>